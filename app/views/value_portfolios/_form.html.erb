<%= form_for(@value_portfolio) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :portfolio_name %>
    <%= f.text_field :portfolio_name, class: 'form-control' %>

    <%= f.label :initial_investment %>
    <%= f.text_field :initial_investment, class: 'form-control'  %>

    <%= f.label :investment_increase %>
    <%= f.text_field :investment_increase, class: 'form-control'  %>

    <%= f.label :share_price %>
    <%= f.text_field :share_price, class: 'form-control'  %>

    <%= f.label :commission_paid %>
    <%= f.text_field :commission_paid, class: 'form-control' %>

    <%= f.label :date_of_trade %>
    <%= f.text_field :date_of_trade %>

    <%= f.submit yield(:button_text), class: "btn btn-default" %>
  <% end %>
